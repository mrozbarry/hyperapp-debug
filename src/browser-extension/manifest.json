{
  "manifest_version": 2,

  "name": "Hyperapp Dev Tools",
  "description": "Time-travel debugger for Hyperapp V2",
  "author": "Alex Barry",
  "version": "0.0.4",
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],

  "devtools_page": "index.html",

  "content_scripts": [
    {
      "js": ["inject.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": [
    "inject.js"
  ]
}
